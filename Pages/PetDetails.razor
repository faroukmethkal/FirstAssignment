@using Assignment_1.Models
<RubberComponent ComponentTitle="Pets"  >

    @if (Pets.Any())
    {
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Species</th>
                <th scope="col">Age</th>
                <th scope="col">Edit</th>
                <th scope="col">Remove</th>
            </tr>
            </thead>

            @foreach (Pet pet in Pets)
            {
                <tbody>
                <tr>
                    <td>@pet.Id</td>
                    <td>@pet.Name</td>
                    <td>@pet.Species</td>
                    <td>@pet.Age</td>
                    <td><span class="oi oi-pencil"/></td>
                    <td><span class="oi oi-trash"/></td>

                </tr>
                </tbody>
            }


        </table>
    }
    else
    {
        <span >Has no Pets</span>
    }

</RubberComponent>

@code {
    [Parameter]
    public string ComponentTitle { get; set; }
    [Parameter]
    public IList<Pet> Pets { get; set; }
    

}